{
    "manifest_version": 3,
    "name": "Scream to Unlock: yell to unblock social media",
    "description": "A productivity tool that blocks social media websites and makes you say embarrassing things to unlock them",
    "author": "Pankaj Tanwar",
    "version": "1.1",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Scream to Unlock Settings"
    },
    "background": {
        "service_worker": "background.js"
    }
}